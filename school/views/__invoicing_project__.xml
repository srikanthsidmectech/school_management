<odoo>
    <!--invoicing inherit custom fields from view-->
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/div[@class='o_col']" position="after">
                <field name="customer_name"/>
                <field name="customer_ph_no"/>
            </xpath>
            <xpath expr="//notebook/page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                   position="after">
                <field name="fee_structure_ids"/>
            </xpath>
            <xpath expr="//notebook/page[@name='other_info']/group/group[@name='accounting_info_group']/field[@name='company_id']"
                   position="after">
                <field name="bank_Name"/>
                <field name="bank_Account_number"/>
                <field name="bank_Branch"/>
                <field name="bank_Ifsc_code"/>
            </xpath>
        </field>
    </record>
</odoo>
